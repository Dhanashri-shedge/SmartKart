{
  "name": "smartkart",
  "version": "1.0.0",
  "description": "SmartKart - Bulk Order Management System for Vendors and Suppliers",
  "main": "server/index.js",
  "scripts": {
    "dev": "concurrently \"npm run server\" \"npm run client\"",
